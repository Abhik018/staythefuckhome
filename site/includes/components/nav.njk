<nav id="nav" class="nav">

    <ul class="menu languages flex flex-row flex-wrap items-center list-reset text-base">

        {% for lang in langs %}

        <li class="level-1 mr-4">

            <a href="{{ lang.url | safe }}" class="link text-gray-700 font-bold hover:text-pink-500 active:text-pink-500 {% if page.url == lang.url %}active text-pink-500{% endif %}"
                {% if page.url == lang.url %} aria-current="page"{% endif %}>{{ lang.name }}</a>

        </li>

        {% endfor %}

    </ul>

</nav>
