<nav id="nav" class="nav">

    <ul class="menu flex flex-row items-center list-reset text-base">

        {% for item in navigation.main %}

        <li class="level-1 mr-4">

            <a href="{{ item.url | safe }}" class="link text-gray-700 font-bold hover:text-pink-500 active:text-pink-500 {% if page.url == item.url %}active text-pink-500{% endif %}"
                {% if page.url == item.url %} aria-current="page"{% endif %}>{{ item.label }}</a>

        </li>

        {% endfor %}

    </ul>

</nav>
